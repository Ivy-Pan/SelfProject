/* 下载：download */
.download {
    width: 30px;
    height: 30px;
}
.download-icon {
    width: 100%;
    height: 100%;
}

/* 图片：image */
.image {
    position: relative;
    padding: 5rpx;
}
.image-img {
    display: block;
    width: 100%;
}
.image .download {
    position: absolute;
    bottom: 5rpx;
    right: 10rpx;
}